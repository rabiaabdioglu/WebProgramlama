@model Bi_anlasam.Models.Kullanici
<div class="kayit-giris-headeri">






    <h2 style="text-align:center; "><i class="fas fa-user mr-1"></i>Kayıt Ol</h2>

    <form asp-action="KayitOl" asp-controller="KayitGiris" style="text-align:center; padding:15px;">
        <div class="modal-content" style=" width: 70%;align-items: center; padding: 2%; margin: 10% auto;">

            <div class="modal-c-tabs" style="width:100%;">

                <div class="tab-content">
                    <div class="tab-pane fade in show active" id="panel7" role="tabpanel">

                        <div class="modal-body mb-1">

                
                            <div class="md-form form-sm" style=" display: flex; width: 90%; justify-content: space-between; margin: 1%;">
                                <label for="form22">Ad</label>
                                <input asp-for="Adi" style="width: 70%;" type="text" class="form-control">
                                <span asp-validation-for="Adi" class="text-danger"></span>

                            </div>
                            <div class="md-form form-sm" style=" display: flex; width: 90%; justify-content: space-between; margin: 1%;">
                                <label for="form22">Soyad</label>
                                <input asp-for="Soyadi" style="width: 70%;" type="text" class="form-control">
                                <span asp-validation-for="Soyadi" class="text-danger"></span>

                            </div>
                            <div class="md-form form-sm" style=" display: flex; width: 90%; justify-content: space-between; margin: 1%;">
                                <label for="form22">Email</label>
                                <input asp-for="Email" style="width: 70%;" type="text" class="form-control">
                                <span asp-validation-for="Email" class="text-danger"></span>

                            </div>
                            <div class="md-form form-sm" style=" display: flex; width: 90%; justify-content: space-between; margin: 1%;">
                                <label for="form22">Şifre</label>
                                <input asp-for="Sifre" style="width: 70%;" type="text" class="form-control">
                                <span asp-validation-for="Sifre" class="text-danger"></span>

                            </div>



                            <div class="text-center mt-2">
                                <button type="submit" class="btn btn-info">Kayıt Ol <i class="fas fa-sign-in-alt ml-1"></i></button>
                            </div>
                        </div>


                    </div>
                    <sub style="font-size: 12px;">Zaten bir hesabın var mı? <a asp-controller="KayitGiris" asp-action="GirisYap">Giriş Yap</a></sub>

                </div>

            </div>        <i style="font-size: 10px;">	Bianlasam.com'a üye olarak Kullanıcı Sözleşmesi'ni kabul etmiş oluyorsunuz.</i>

        </div>



    </form>


</div>
</div>