@model Bi_anlasam.Models.Kullanici

<div class="kayit-giris-headeri">

    <h2><i class="fas fa-user-plus mr-1"></i>Giriş Yap</h2>


    <div class="modal-content" style=" width: 80%;align-items: center; padding: 2%; margin: auto;">

        <!--Modal cascading tabs-->
        <div class="modal-c-tabs" style="width:100%;">


            <!-- Tab panels -->
            <div class="tab-content">
                <!--Panel 7-->
                <div class="tab-pane fade in show active" id="panel7" role="tabpanel">
                    <form action="/KayitGiris/GirisYap" method="post">
                        <!--Body-->
                        <div class="modal-body mb-1">
                            <div class="md-form form-sm" style=" display: flex; width: 90%; justify-content: space-between; margin: 1%;">
                                <i class="fas fa-envelope prefix"></i>
                                <label for="form22">Email</label>
                                <input asp-for="Email" style="width: 70%;" name="email" type="text" class="form-control">
                                <span asp-validation-for="Email" class="text-danger"></span>

                            </div>

                            <div class="md-form form-sm" style=" display: flex; width: 90%; justify-content: space-between; margin: 1%;">
                                <i class="fas fa-lock prefix"></i>
                                <label for="form23">Şifre</label>
                                <input asp-for="Sifre" style="width: 70%;" name="sifre" type="password" class="form-control">
                                <span asp-validation-for="Sifre" class="text-danger"></span>
                            </div>
                            <div class="text-center mt-2">
                                <button class="btn btn-info" type="submit">Giriş Yap <i class="fas fa-sign-in-alt ml-1"></i></button>
                            </div>
                        </div>
                    </form>

                </div>
                <!--/.Panel 7-->

            </div>

        </div>
    </div>
</div>


